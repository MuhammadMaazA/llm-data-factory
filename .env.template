# =============================================================================
# LLM Data Factory - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit the actual .env file to git!

# =============================================================================
# API CREDENTIALS
# =============================================================================
# OpenAI API Key (required for data generation with GPT-4)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
API_HOST=localhost
API_PORT=8000
API_BASE_URL=http://localhost:8000

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
MODEL_CACHE_DIR=./models
STUDENT_MODEL_NAME=microsoft/Phi-3-mini-4k-instruct
TEACHER_MODEL_NAME=gpt-4o

# =============================================================================
# DATA CONFIGURATION
# =============================================================================
DATA_DIR=./data
OUTPUT_MODEL_DIR=./final_student_model

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================
MAX_TOKENS=4096
BATCH_SIZE=4
LEARNING_RATE=2e-4
NUM_EPOCHS=3
WARMUP_STEPS=100

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
WANDB_PROJECT=llm-data-factory
WANDB_DISABLED=true
